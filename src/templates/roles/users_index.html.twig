{% extends "@Symfrop/base.html.twig" %}

{% block title %}
    {{ __('Index des roles') | title }}
{% endblock title %}

{% block body %}
    <div class="symfrop-container">
        <h1>{{ __('Index des roles') | title }}</h1>
        <div class="symfrop-bg-dark">
            <hr>
        </div>
        <div class="symfrop-row">
        <div class="symfrop-col symfrop-text-right">
            {{ create_symfrop_link('njeaner_symfrop_role_index', __u('Roles index'), {}, {class:"symfrop-btn symfrop-btn-primary"}) }}
        </div>
    </div>
<style>
    th, td{
        padding: 0.5rem;
    }
    tr{
        border-bottom: 1px solid gray;
    }
</style>
    <div class="symfrop-row">
        <div class="symfrop-col">
            <table class="symfrop-table" style="width: 95vw;border-collapse: collapse;">
                <thead style="background-color: grey;">
                    <tr >
                        <th >{{ __u('Name') }}</th>
                        <th>{{ __u('Role') }}</th>
                        <th>{{ __u('Action') }}</th>
                    </tr>                    
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr style="text-align: center;">
                            <td>{{ user }}</td>
                            <td>{{ __u(user.role )}}</td>
                            <td>{{ create_symfrop_link('njeaner_symfrop_user_role_edit', __u('Edit Role'), {user: user.id}, {class: 'symfrop-btn'})}}</td>
                        </tr>
                    {% else %}
                    <tr style="text-align: center;">
                        <td colspan="3">{{ __u('No Record Found') }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}